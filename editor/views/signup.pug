extends layout

block content
  h1= title
        
  form(method='POST', action='/signup')
    table
      tr
        td
          label(for='userId') userID
        td
          input#userId.input(type='text', name='userId', value='', size='40')
      tr
        td
          label(for='userName') userName
        td
          input#userName.input(type='text', name='userName', value='', size='40')
      tr
        td
          label(for='password') password
        td
          input#password.input(type='password', name='password', size='40')
    p
    input.btn.btn-primary(type='button', value='戻る')
    input.btn.btn-primary(type='submit', value='確認')